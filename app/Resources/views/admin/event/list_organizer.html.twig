{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% set organizer = object.organizer %}
    <a href="{{ path('admin_app_adherent_show', {'id': organizer.id}) }}">
        {{ organizer.fullName }}
    </a>
    <br />
    {{ organizer.emailAddress }}
    {% if organizer.phone %}
        <br />
        {{ organizer.phone|phone_number_format }}
    {% endif %}
{% endblock %}
